        </p>
    </div>
    
    <div id='code2'>
    	<p>
        	" alt="A 3D model of an astronaut" auto-rotate="" shadow-intensity="3.2" shadow-softness="0.73" exposure="0.8" camera-controls="" background-color="#ffffff" ar="" magic-leap="" unstable-webxr="" ios-src="
        </p>
    </div>
    
    
</body>
<script>
    let addglb = () => {
      
        let ele = document.getElementById('code1');
        ele.innerHTML += document.getElementById('glb').value
    }
</script>

<script>
    let addusdz = () => {
      
        let ele = document.getElementById('code2');
        ele.innerHTML += document.getElementById('usdz').value
    }
</script>

